{
    "$schema": "http://json-schema.org/schema#",
    "title": "Quantum Circuit",
    "description": "Validation of a general Quantum Circuit",
    "type": "object",
    "properties": {
        "instructions": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "enum": [
                            "X",
                            "Y",
                            "Z",
                            "H",
                            "S",
                            "SDG",
                            "T",
                            "TDG",
                            "SX",
                            "SXDG",
                            "ID",
                            "P",
                            "RX",
                            "RY",
                            "RZ",
                            "R",
                            "U1",
                            "U2",
                            "U2DG",
                            "U3",
                            "U",
                            "CX",
                            "CS",
                            "CSDG",
                            "DCX",
                            "DCXDG",
                            "CSX",
                            "CSXDG",
                            "ECR",
                            "CY",
                            "CZ",
                            "CH",
                            "SWAP",
                            "ISWAP",
                            "ISWAPDG",
                            "CP",
                            "CR",
                            "RZZ",
                            "RXX",
                            "RYY",
                            "XXplusYY",
                            "XXminusYY",
                            "CRX",
                            "CRY",
                            "CRZ",
                            "CU",
                            "CCX",
                            "CSWAP",
                            "Custom",
                            "Barrier",
                            "Reset",
                            "Measure",
                            "IfStatement",
                            "Control",
                            "Parallel"
                        ]
                    },
                    "N": {
                        "type": "integer",
                        "minimum": 1
                    },
                    "M": {
                        "type": "integer",
                        "minimum": 1
                    },
                    "qtargets": {
                        "type": "array",
                        "items": {
                            "type": "integer",
                            "minimum": 1
                        },
                        "minItems": 1,
                        "uniqueItems": true
                    },
                    "ctargets": {
                        "type": "array",
                        "items": {
                            "type": "integer",
                            "minimum": 1
                        },
                        "uniqueItems": true
                    },
                    "params": {
                        "type": "object"
                    },
                    "U": {
                        "type": "array"
                    },
                    "op": {
                        "type": "object"
                    },
                    "controls": {
                        "type": "integer"
                    },
                    "resets": {
                        "type": "integer"
                    },
                    "value": {
                        "type": "string"
                    }
                },
                "required": [
                    "name",
                    "N",
                    "M",
                    "qtargets",
                    "ctargets"
                ]
            }
        }
    },
    "required": [
        "instructions"
    ]
}
